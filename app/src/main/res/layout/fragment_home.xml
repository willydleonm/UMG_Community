<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Home"
    android:id="@+id/fragment_home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ingenieria_banner"
                android:textAlignment="center"
                android:text="SEMESTRE"
                android:textSize="24sp"
                android:gravity="bottom"
                android:textColor="@color/colorPrimaryDark" />

            <!--Fila 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Semestre 1-->
                <LinearLayout
                    android:id="@+id/linear_semestre1"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorGrapeFruit"

                    >

                    <ImageView
                        android:id="@+id/image_semestre1"
                        android:clickable="false"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_sem1"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorGrapeFruitDark"
                        android:text="Primero"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons" />
                </LinearLayout>

                <!--Semestre 2-->
                <LinearLayout
                    android:id="@+id/linear_semestre2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorBitterSweet"

                    >

                    <ImageView
                        android:id="@+id/image_semestre2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorBitterSweetDark"
                        android:text="Segundo"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"/>
                </LinearLayout>

                <!--Semestre 3-->
                <LinearLayout
                    android:id="@+id/linear_semestre3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorFlower"

                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorFlowerDark"
                        android:text="Tercero"
                        android:textSize="18sp"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 1-->

            <!--Fila 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Semestre 4-->
                <LinearLayout
                    android:id="@+id/linear_semestre4"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorGrass"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorGrassDark"
                        android:padding="8dp"
                        android:text="Cuarto"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--Semestre 5-->
                <LinearLayout
                    android:id="@+id/linear_semestre5"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBlueJeans"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorBlueJeansDark"
                        android:padding="8dp"
                        android:text="Quinto"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--Semestre 6-->
                <LinearLayout
                    android:id="@+id/linear_semestre6"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorLavander"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorLavanderDark"
                        android:padding="8dp"
                        android:text="Sexto"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 2-->

            <!--Fila 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Semestre 7-->
                <LinearLayout
                    android:id="@+id/linear_semestre7"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorMint"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorMintDark"
                        android:padding="8dp"
                        android:text="Séptimo"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--Semestre 8-->
                <LinearLayout
                    android:id="@+id/linear_semestre8"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorAqua"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorAquaDark"
                        android:padding="8dp"
                        android:text="Octavo"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--Semestre 9-->
                <LinearLayout
                    android:id="@+id/linear_semestre9"
                    android:layout_width="33dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPinkRose"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre9"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPinkRoseDark"
                        android:padding="8dp"
                        android:text="Noveno"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin de Fila 3-->

            <!--Fila 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Semestre 10-->
                <LinearLayout
                    android:id="@+id/linear_semestre10"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPurple"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/image_semestre10"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_user_login"
                        android:tint="@color/colorTextIcons" />

                    <TextView
                        android:id="@+id/txt_semestre10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPurpleDark"
                        android:padding="8dp"
                        android:text="Décimo"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>
            <!--Fin de Fila 4-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>